<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/basketballRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    android:padding="10dp">

    <!-- Shot Clock -->
    <TextView
        android:id="@+id/shot_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <!-- Shot Clock Play Button -->
    <ImageButton
        android:id="@+id/play_shot_clock_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/shot_clock"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/play" />

    <!-- Menu Button -->
    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/menu" />

    <!-- Left Side Add Buttons -->
    <LinearLayout
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shot_clock"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="41dp"
        android:orientation="vertical">

        <!-- +1 Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/plus1_team1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="+1"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- +2 Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/plus2_team1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="+2"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- +3 Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/plus3_team1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="+3"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Add this Right Side Add Buttons section right after your Left Side Add Buttons section -->
    <LinearLayout
        android:id="@+id/plus_team2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shot_clock"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="41dp"
        android:orientation="vertical">

        <!-- +1 Button for Team 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/plus1_team2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="+1"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- +2 Button for Team 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/plus2_team2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="+2"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- +3 Button for Team 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/plus3_team2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="+3"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


    <!-- Whistle and Buzzer (Left) -->

    <!-- Main Timer -->
    <LinearLayout
        android:id="@+id/whistle_buzzer_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plus"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="53dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buzzer_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buzzer1" />

        <ImageButton
            android:id="@+id/whistle_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/whistle2" />
    </LinearLayout>

    <!-- Bottom Controls (Right Side - Shuffle) -->
    <LinearLayout
        android:id="@+id/right_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/shuffle_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/swap" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/start_timer_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/play"
            android:scaleType="fitCenter"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/main_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="48sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Period Section -->
    <LinearLayout
        android:id="@+id/period_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_container"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/period_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periods:"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/period_counter"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:text="1"
            android:textSize="28sp"
            android:background="@drawable/shape"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <!-- Team 1 Layout -->
    <LinearLayout
        android:id="@+id/team1_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Team 1"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/team1_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#00FF00"
            android:textSize="60sp" />

        <!-- Team 1 Foul Display -->
        <TextView
            android:id="@+id/team1_foul_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fouls: 0"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <!-- Team 2 Layout -->
    <LinearLayout
        android:id="@+id/team2_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="150dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Team 2"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/team2_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#00FF00"
            android:textSize="60sp" />

        <!-- Team 2 Foul Display -->
        <TextView
            android:id="@+id/team2_foul_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fouls: 0"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <!-- Add Foul Button -->


    <!-- Add Player Button -->

    <Button
        android:id="@+id/addFoulButton"
        android:layout_width="187dp"
        android:layout_height="40dp"
        android:layout_below="@id/period_container"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="340dp"
        android:background="@drawable/shape"
        android:text="Add Foul"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/add_player_button"
        android:layout_width="187dp"
        android:layout_height="40dp"
        android:layout_below="@id/addFoulButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape"
        android:text="Add Player"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>
